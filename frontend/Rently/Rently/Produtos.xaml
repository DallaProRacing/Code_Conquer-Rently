<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Rently.Produtos"
             BackgroundColor="White"
             Title="">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <!-- Header -->
            <VerticalStackLayout Spacing="20" VerticalOptions="Center">
                <Image Source="logostudio.png"
                       WidthRequest="200"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
                <Label Text="Cadastrar Produto"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="Orange"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

            <!-- Formulário -->
            <VerticalStackLayout Spacing="20">

                <!-- Nome do Produto -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Nome do Produto *"
                           FontSize="12"
                           TextColor="Black"
                           FontAttributes="Bold"/>
                    <Border Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 8">
                        <Entry x:Name="EntryNomeProduto"
                               Placeholder="Ex: Bicicleta"
                               FontSize="12"
                               TextColor="Black"
                               PlaceholderColor="Gray"
                               BackgroundColor="Transparent"
                               HeightRequest="50"/>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Grid ColumnSpacing="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Preço -->
                        <VerticalStackLayout Spacing="5" Grid.Column="0">
                            <Label Text="Preço *"
                           FontSize="12"
                           TextColor="Black"
                           FontAttributes="Bold"/>
                            <Border Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 8">
                                <Entry x:Name="EntryPreco"
                               Placeholder="R$ 0,00"
                               Keyboard="Numeric"
                               FontSize="12"
                               TextColor="Black"
                               PlaceholderColor="Gray"
                               BackgroundColor="Transparent"
                               HeightRequest="50"
                                       TextChanged="EntryPreco_TextChanged"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Categoria -->
                        <VerticalStackLayout Spacing="5" Grid.Column="1">
                            <Grid ColumnSpacing="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Label Text="Categoria *"
                                       Grid.Column="0"
                                       FontSize="12"
                                       TextColor="Black"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>

                            </Grid>

                            <Border Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 8">
                                <Picker x:Name="PickerCategoria"
                                        FontSize="12"
                                        TextColor="Black"
                                        BackgroundColor="Transparent"
                                        HeightRequest="50"
                                        HorizontalOptions="FillAndExpand"/>
                            </Border>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Descrição do Produto *"
           FontSize="12"
           TextColor="Black"
           FontAttributes="Bold"/>
                    <Border Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 8">
                        <Entry x:Name="EntryDescricaoProduto"
               Placeholder="Ex: Serve em ..."
               FontSize="12"
               TextColor="Black"
               PlaceholderColor="Gray"
               BackgroundColor="Transparent"
               HeightRequest="50"/>
                    </Border>
                </VerticalStackLayout>

                <!-- Tipo (Aluguel ou Venda) - Toggle -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Tipo *"
                           FontSize="12"
                           TextColor="Black"
                           FontAttributes="Bold"/>

                    <!-- Toggle Switch Style -->
                    <Grid ColumnSpacing="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                x:Name="AluguelBorder"
                                Stroke="Gray" 
                                StrokeThickness="2" 
                                StrokeShape="RoundRectangle 8,0,0,8"
                                BackgroundColor="DarkGray">
                            <Button Text="Aluguel"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    TextColor="White"
                                    BackgroundColor="Transparent"
                                    x:Name="AluguelButton"
                                    HeightRequest="50"
                                    Clicked="OnAluguelClicked"/>
                        </Border>

                        <Border Grid.Column="1" 
                                x:Name="VendaBorder"
                                Stroke="Gray" 
                                StrokeThickness="2" 
                                StrokeShape="RoundRectangle 0,8,8,0"
                                BackgroundColor="Transparent">
                            <Button Text="Venda"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    TextColor="Black"
                                    BackgroundColor="Transparent"
                                    x:Name="VendaButton"
                                    HeightRequest="50"
                                    Clicked="OnVendaClicked"/>
                        </Border>
                    </Grid>
                </VerticalStackLayout>

                <!-- Rua e Número lado a lado -->
                <Grid ColumnSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3.5*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Rua -->
                    <VerticalStackLayout Spacing="5" Grid.Column="0">
                        <Label Text="Rua *"
                               FontSize="12"
                               TextColor="Black"
                               FontAttributes="Bold"/>
                        <Border Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 8">
                            <Entry x:Name="EntryRua"
                                   Placeholder="Nome da Rua"
                                   FontSize="12"
                                   TextColor="Black"
                                   PlaceholderColor="Gray"
                                   BackgroundColor="Transparent"
                                   HeightRequest="50"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Número -->
                    <VerticalStackLayout Spacing="5" Grid.Column="1">
                        <Label Text="N° *"
                               FontSize="12"
                               TextColor="Black"
                               FontAttributes="Bold"/>
                        <Border Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 8">
                            <Entry x:Name="EntryNumero"
                                   Placeholder="000"
                                   Keyboard="Numeric"
                                   FontSize="12"
                                   TextColor="Black"
                                   PlaceholderColor="Gray"
                                   BackgroundColor="Transparent"
                                   HeightRequest="50"/>
                        </Border>
                    </VerticalStackLayout>
                </Grid>

                <Grid ColumnSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Bairro -->
                    <VerticalStackLayout Spacing="5" Grid.Column="0">
                        <Label Text="Bairro *"
                           FontSize="12"
                           TextColor="Black"
                           FontAttributes="Bold"/>
                        <Border Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 8">
                            <Entry x:Name="EntryBairro"
                               Placeholder="Ex: Centro"
                               FontSize="12"
                               TextColor="Black"
                               PlaceholderColor="Gray"
                               BackgroundColor="Transparent"
                               HeightRequest="50"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- CEP -->
                    <VerticalStackLayout Spacing="5" Grid.Column="1">
                        <Label Text="CEP *"
                               FontSize="12"
                               TextColor="Black"
                               FontAttributes="Bold"/>
                        <Border Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 8">
                            <Entry x:Name="EntryCep"
                                   Placeholder="00000-000"
                                   Keyboard="Numeric"
                                   FontSize="12"
                                   TextColor="Black"
                                   PlaceholderColor="Gray"
                                   BackgroundColor="Transparent"
                                   HeightRequest="50">
                                <Entry.Behaviors>
                                    <toolkit:MaskedBehavior Mask="XXXXX-XXX" />
                                </Entry.Behaviors>
                            </Entry>
                        </Border>
                    </VerticalStackLayout>
                </Grid>

                <Grid ColumnSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- UF -->
                    <VerticalStackLayout Spacing="5" Grid.Column="0">
                        <Label Text="UF *"
                               FontSize="12"
                               TextColor="Black"
                               FontAttributes="Bold"/>
                        <Border Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 8">
                            <Entry x:Name="EntryUf"
                                   Placeholder="SP"
                                   MaxLength="2"
                                   FontSize="12"
                                   TextColor="Black"
                                   PlaceholderColor="Gray"
                                   BackgroundColor="Transparent"
                                   HeightRequest="50"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Cidade -->
                    <VerticalStackLayout Spacing="5" Grid.Column="1">
                        <Label Text="Cidade *"
                           FontSize="12"
                           TextColor="Black"
                           FontAttributes="Bold"/>
                        <Border Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle 8">
                            <Entry x:Name="EntryCidade"
                               Placeholder="Ex: São Paulo"
                               FontSize="12"
                               TextColor="Black"
                               PlaceholderColor="Gray"
                               BackgroundColor="Transparent"
                               HeightRequest="50"/>
                        </Border>
                    </VerticalStackLayout>

                </Grid>

                <!-- Botão Cadastrar -->
                <Grid>
                    <Button Text="Cancelar"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="Orange"
                        BackgroundColor="White"
                        CornerRadius="8"
                        WidthRequest="110"
                        HeightRequest="50"
                        Margin="0,20,0,0"
                        HorizontalOptions="Start"
                        BorderColor="Orange"
                        BorderWidth="2"/>

                    <Button Text="Cadastrar"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="Orange"
                        CornerRadius="8"
                        WidthRequest="110"
                        HeightRequest="50"
                        Margin="0,20,0,0"
                        HorizontalOptions="End"
                        Clicked="OnCadastrarClicked"/>
                </Grid>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>