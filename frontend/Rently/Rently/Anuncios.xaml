<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Rently.Anuncios"
    x:Name="ThisPage"
    BackgroundColor="White"
    BindingContext="{x:Reference ThisPage}">

    <Grid RowDefinitions="Auto,*" Padding="20" RowSpacing="16">

        <!-- Botão topo -->
        <Frame Grid.Row="0" BackgroundColor="Orange" CornerRadius="14" Padding="0" HasShadow="True">
            <Button Text="+ Novo Anúncio"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="56"
                    Clicked="CriarProdutos"/>
        </Frame>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="24">

                <!-- Loading -->
                <Grid IsVisible="{Binding Carregando}">
                    <ActivityIndicator IsRunning="True" />
                </Grid>

                <!-- Ativos -->
                <VerticalStackLayout Spacing="12">
                    <Label Text="Anúncios Ativos"
                           TextColor="Orange"
                           FontAttributes="Bold"
                           FontSize="18"/>
                    <CollectionView ItemsSource="{Binding Ativos}" SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="16"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#FAFAFA"
                   CornerRadius="16"
                   Padding="18"
                   HasShadow="True"
                   BorderColor="#E6E6E6"
                   MinimumHeightRequest="110">

                                    <Grid RowDefinitions="3,Auto,Auto,Auto" ColumnDefinitions="*,Auto" ColumnSpacing="8">


                                        <!-- título + menu -->
                                        <Label Grid.Row="1" Grid.Column="0"
                           Text="{Binding nomeProduto}"
                           TextColor="#222" FontAttributes="Bold" FontSize="16"/>

                                        <Button Grid.Row="1" Grid.Column="1"
                            Text="⋮" FontSize="22" Padding="0"
                            BackgroundColor="Transparent" TextColor="#777"
                            Clicked="OnMoreClicked" CommandParameter="{Binding}"/>

                                        <!-- categoria -->
                                        <Label Grid.Row="2" Grid.ColumnSpan="2"
                           Text="{Binding CategoriaDisplay}"
                           TextColor="#888" FontSize="13"/>

                                        <!-- preço + descrição curta -->
                                        <HorizontalStackLayout Grid.Row="3" Grid.ColumnSpan="2" Spacing="10">
                                            <Label Text="{Binding PrecoFormatado}"
                               TextColor="Orange" FontSize="14" FontAttributes="Bold"
                               VerticalOptions="Start"/>
                                            <Label Text="•" TextColor="#D0D0D0" VerticalOptions="Start"/>
                                            <Label Text="{Binding descricaoProduto}"
                               TextColor="#666" FontSize="14"
                               LineBreakMode="TailTruncation" MaxLines="2"/>
                                        </HorizontalStackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>


                <BoxView HeightRequest="12" BackgroundColor="Transparent"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
