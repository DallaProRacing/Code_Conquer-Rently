<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rently.MainPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout
        Padding="30"
        Spacing="20"
        VerticalOptions="Center">

            <!-- Logo -->
            <Image Source="logo.png" 
               WidthRequest="200"
               Aspect="AspectFit" 
               HorizontalOptions="Center" 
               VerticalOptions="Center" 
        />

            <!-- Campo Email -->
            <VerticalStackLayout 
            Spacing="5"
            Margin="0,30,0,0">
                <Label Text="Email"
            FontSize="12"
            TextColor="Orange"
            FontAttributes="Bold"/>

                <Border BackgroundColor="Transparent"
             StrokeShape="RoundRectangle 8"
            Stroke="Gray"
            StrokeThickness="1">
                    <Entry Placeholder="seu@email.com"
                    Keyboard="Email"
                    FontSize="14"
                    TextColor="Black"
                    PlaceholderColor="Gray"
                    BackgroundColor="Transparent"
                    HeightRequest="50"/>
                </Border>
            </VerticalStackLayout>


            <!-- Botão Login -->
            <Button Text="Entrar"
                FontSize="16"
                FontAttributes="Bold"
                TextColor="White"
                BackgroundColor="Orange"
                CornerRadius="8"
                Clicked="Button_Clicked"
                HeightRequest="50"
                Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
