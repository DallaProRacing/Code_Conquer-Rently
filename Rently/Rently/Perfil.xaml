<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rently.Perfil"
             BackgroundColor="White"
             Title="">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <!-- Header -->
            <VerticalStackLayout Spacing="16" VerticalOptions="Center">
                

                <VerticalStackLayout Spacing="4">
                    <Label Text="Meu Perfil"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="Orange"
                           HorizontalOptions="Center" />
                    <Label Text="Gerencie suas informa√ß√µes pessoais"
                           FontSize="16"
                           TextColor="Gray"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Avatar com bot√£o de troca -->
            <Grid HeightRequest="140" HorizontalOptions="Center">
                <Frame WidthRequest="120" HeightRequest="120"
                       Padding="0" IsClippedToBounds="True"
                       CornerRadius="60" HasShadow="False"
                       BorderColor="Orange" BackgroundColor="#FFF7EE">
                    <Image x:Name="AvatarImage"
                           Source="avatar_placeholder.png"
                           Aspect="AspectFill" />
                </Frame>

                <Button x:Name="Photo"
                        Text="üì∑"
                        WidthRequest="40" HeightRequest="40"
                        CornerRadius="20"
                        FontSize="14"
                        BackgroundColor="Orange"
                        TextColor="White"
                        Padding="0"
                        HorizontalOptions="End" VerticalOptions="End"
                        Margin="0,0,6,6"
                        Clicked="Photo_Clicked" />
            </Grid>

            <!-- Formul√°rio -->
            <VerticalStackLayout Spacing="20">

                <!-- Nome -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Nome completo"
                           FontSize="12"
                           TextColor="Orange"
                           FontAttributes="Bold" />
                    <Border BackgroundColor="Transparent"
                            StrokeShape="RoundRectangle 8"
                            Stroke="Gray"
                            StrokeThickness="1">
                        <Entry x:Name="NomeEntry"
                               Placeholder="Seu nome"
                               FontSize="12"
                               TextColor="Black"
                               PlaceholderColor="Gray"
                               BackgroundColor="Transparent"
                               HeightRequest="50" />
                    </Border>
                </VerticalStackLayout>

                <!-- Email (somente leitura) -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Email"
                           FontSize="12"
                           TextColor="Orange"
                           FontAttributes="Bold" />
                    <Border BackgroundColor="#FAFAFA"
                            StrokeShape="RoundRectangle 8"
                            Stroke="Gray"
                            StrokeThickness="1">
                        <Entry x:Name="EmailEntry"
                               Placeholder="seu@email.com"
                               IsReadOnly="True"
                               Keyboard="Email"
                               FontSize="12"
                               TextColor="Gray"
                               PlaceholderColor="Gray"
                               BackgroundColor="Transparent"
                               HeightRequest="50" />
                    </Border>
                    <Label Text="O email √© usado para login. Para alterar, fale com o suporte."
                           FontSize="10"
                           TextColor="Gray" />
                </VerticalStackLayout>

                <!-- 2 colunas -->
                <Grid ColumnSpacing="20" RowSpacing="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Telefone -->
                    <VerticalStackLayout Spacing="5" Grid.Row="0" Grid.Column="0">
                        <Label Text="Telefone"
                               FontSize="12"
                               TextColor="Orange"
                               FontAttributes="Bold" />
                        <Border BackgroundColor="Transparent"
                                StrokeShape="RoundRectangle 8"
                                Stroke="Gray"
                                StrokeThickness="1">
                            <Entry x:Name="TelefoneEntry"
                                   Placeholder="+55 (00) 00000-0000"
                                   Keyboard="Telephone"
                                   FontSize="12"
                                   TextColor="Black"
                                   PlaceholderColor="Gray"
                                   BackgroundColor="Transparent"
                                   HeightRequest="50" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Data de Nascimento -->
                    <VerticalStackLayout Spacing="5" Grid.Row="0" Grid.Column="1">
                        <Label Text="Data de Nascimento"
                               FontSize="12"
                               TextColor="Orange"
                               FontAttributes="Bold" />
                        <Border BackgroundColor="Transparent"
                                StrokeShape="RoundRectangle 8"
                                Stroke="Gray"
                                StrokeThickness="1">
                            <Grid HeightRequest="50" Padding="10,0">
                                <DatePicker x:Name="NascimentoPicker"
                                            Format="dd/MM/yyyy"
                                            TextColor="Black"
                                            HorizontalOptions="Fill"
                                            VerticalOptions="Center" />
                            </Grid>
                        </Border>
                    </VerticalStackLayout>

                    <!-- CPF -->
                    <VerticalStackLayout Spacing="5" Grid.Row="1" Grid.Column="0">
                        <Label Text="CPF"
                               FontSize="12"
                               TextColor="Orange"
                               FontAttributes="Bold" />
                        <Border BackgroundColor="Transparent"
                                StrokeShape="RoundRectangle 8"
                                Stroke="Gray"
                                StrokeThickness="1">
                            <Entry x:Name="CpfEntry"
                                   Placeholder="000.000.000-00"
                                   Keyboard="Numeric"
                                   FontSize="12"
                                   TextColor="Black"
                                   PlaceholderColor="Gray"
                                   BackgroundColor="Transparent"
                                   HeightRequest="50" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- G√™nero (opcional) -->
                    <VerticalStackLayout Spacing="5" Grid.Row="1" Grid.Column="1">
                        <Label Text="G√™nero (opcional)"
                               FontSize="12"
                               TextColor="Orange"
                               FontAttributes="Bold" />
                        <Border BackgroundColor="Transparent"
                                StrokeShape="RoundRectangle 8"
                                Stroke="Gray"
                                StrokeThickness="1">
                            <Picker x:Name="GeneroPicker"
                                    Title="Selecione"
                                    FontSize="12"
                                    TextColor="Black"
                                    HeightRequest="50">
                                <Picker.Items>
                                    <x:String>Feminino</x:String>
                                    <x:String>Masculino</x:String>
                                    <x:String>Outro</x:String>
                                    <x:String>Prefiro n√£o informar</x:String>
                                </Picker.Items>
                            </Picker>
                        </Border>
                    </VerticalStackLayout>
                </Grid>

                <!-- Endere√ßo -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Endere√ßo"
                           FontSize="12"
                           TextColor="Orange"
                           FontAttributes="Bold" />
                    <Border BackgroundColor="Transparent"
                            StrokeShape="RoundRectangle 8"
                            Stroke="Gray"
                            StrokeThickness="1">
                        <Entry x:Name="EnderecoEntry"
                               Placeholder="Rua, n√∫mero, complemento"
                               FontSize="12"
                               TextColor="Black"
                               PlaceholderColor="Gray"
                               BackgroundColor="Transparent"
                               HeightRequest="50" />
                    </Border>
                </VerticalStackLayout>

                <!-- A√ß√µes -->
                <Button x:Name="Salvar"
                        Text="Salvar altera√ß√µes"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="Orange"
                        CornerRadius="8"
                        HeightRequest="50"
                        Margin="0,10,0,0"
                        Clicked="Salvar_Clicked" />

                <Button x:Name="AlterarSenha"
                        Text="Alterar senha"
                        FontSize="14"
                        TextColor="Orange"
                        BackgroundColor="Transparent"
                        HeightRequest="44"
                        Clicked="AlterarSenha_Clicked" />

                
                <Button x:Name="Sair"
                        Text="Sair da conta"
                        FontSize="14"
                        TextColor="White"
                        BackgroundColor="#555"
                        CornerRadius="8"
                        HeightRequest="44"
                        Clicked="Sair_Clicked" />
                   
                

                <!-- Info -->
                <Label Text="√öltima atualiza√ß√£o: "
                       FontSize="10"
                       TextColor="Gray"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
