<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rently.Servicos"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*">

        <!-- HEADER -->
        <Grid Grid.Row="0" 
              BackgroundColor="orange" 
              Padding="15,10,15,10"
              ColumnDefinitions="Auto,*,Auto">

            <!-- Botão Voltar -->
            <Button x:Name="BotaoVoltar"
                    Grid.Column="0"
                    Text="←"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="24"
                    WidthRequest="40"
                    HeightRequest="40"/>

            <!-- Título -->
            <Label Grid.Column="1"
                   Text="Meus Serviços"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="20"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

            <!-- Botão Adicionar -->
            <Button x:Name="BotaoAdicionar"
                    Grid.Column="2"
                    Text="+"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="24"
                    WidthRequest="40"
                    HeightRequest="40"
                    ToolTipProperties.Text="Cadastrar novo serviço"/>
        </Grid>

        <!-- CONTEÚDO -->
        <ScrollView Grid.Row="1">
            <StackLayout Padding="20" Spacing="20">

                <!-- Botão Cadastrar Novo Serviço -->
                <Frame BackgroundColor="orange"
                       CornerRadius="15"
                       Padding="0"
                       HasShadow="True">
                    <Button x:Name="BotaoCadastrarServico"
                            Text="+ Cadastrar Novo Serviço"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="60"/>
                </Frame>

                <!-- Seção Meus Serviços Ativos -->
                <StackLayout Spacing="15">
                    <Label Text="Serviços Ativos"
                           TextColor="orange"
                           FontAttributes="Bold"
                           FontSize="18"/>

                    <!-- Card Serviço 1 -->
                    <Frame BackgroundColor="#F5F5F5"
                           CornerRadius="15"
                           Padding="20"
                           HasShadow="True"
                           BorderColor="#E0E0E0">
                        <StackLayout Spacing="10">

                            <!-- Header do Card -->
                            <Grid ColumnDefinitions="*,Auto">
                                <StackLayout Grid.Column="0" Spacing="5">
                                    <Label Text="Manutenção Residencial"
                                           TextColor="#333333"
                                           FontAttributes="Bold"
                                           FontSize="16"/>
                                    <Label Text="Elétrica, Hidráulica, Pintura"
                                           TextColor="#666666"
                                           FontSize="14"/>
                                </StackLayout>

                                <Label Grid.Column="1"
                                       Text="R$ 60/hora"
                                       TextColor="orange"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </Grid>

                            <!-- Botões de Ação -->
                            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10" Margin="0,10,0,0">
                                <Button Grid.Column="0"
                                        Text="Editar"
                                        BackgroundColor="#4CAF50"
                                        TextColor="White"
                                        CornerRadius="10"
                                        HeightRequest="35"
                                        FontSize="12"/>

                                <Button Grid.Column="1"
                                        Text="Pausar"
                                        BackgroundColor="orange"
                                        TextColor="White"
                                        CornerRadius="10"
                                        HeightRequest="35"
                                        FontSize="12"/>

                                <Button Grid.Column="2"
                                        Text="Excluir"
                                        BackgroundColor="#F44336"
                                        TextColor="White"
                                        CornerRadius="10"
                                        HeightRequest="35"
                                        FontSize="12"/>
                            </Grid>

                            <!-- Estatísticas -->
                            <Grid ColumnDefinitions="*,*" Margin="0,10,0,0">
                                <StackLayout Grid.Column="0" Spacing="2">
                                    <Label Text="12"
                                           TextColor="#FF7A00"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"/>
                                    <Label Text="Pedidos"
                                           TextColor="#666666"
                                           FontSize="12"
                                           HorizontalOptions="Center"/>
                                </StackLayout>

                                <StackLayout Grid.Column="1" Spacing="2">
                                    <Label Text="R$ 720"
                                           TextColor="orange"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"/>
                                    <Label Text="Este mês"
                                           TextColor="#666666"
                                           FontSize="12"
                                           HorizontalOptions="Center"/>
                                </StackLayout>
                            </Grid>
                        </StackLayout>
                    </Frame>

                    <!-- Card Serviço 2 -->
                    <Frame BackgroundColor="#F5F5F5"
                           CornerRadius="15"
                           Padding="20"
                           HasShadow="True"
                           BorderColor="#E0E0E0">
                        <StackLayout Spacing="10">

                            <!-- Header do Card -->
                            <Grid ColumnDefinitions="*,Auto">
                                <StackLayout Grid.Column="0" Spacing="5">
                                    <Label Text="Montagem de Móveis"
                                           TextColor="#333333"
                                           FontAttributes="Bold"
                                           FontSize="16"/>
                                    <Label Text="Móveis planejados e convencionais"
                                           TextColor="#666666"
                                           FontSize="14"/>
                                </StackLayout>

                                <Label Grid.Column="1"
                                       Text="R$ 45/hora"
                                       TextColor="orange"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </Grid>

                            <!-- Botões de Ação -->
                            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10" Margin="0,10,0,0">
                                <Button Grid.Column="0"
                                        Text="Editar"
                                        BackgroundColor="#4CAF50"
                                        TextColor="White"
                                        CornerRadius="10"
                                        HeightRequest="35"
                                        FontSize="12"/>

                                <Button Grid.Column="1"
                                        Text="Pausar"
                                        BackgroundColor="orange"
                                        TextColor="White"
                                        CornerRadius="10"
                                        HeightRequest="35"
                                        FontSize="12"/>

                                <Button Grid.Column="2"
                                        Text="Excluir"
                                        BackgroundColor="orange"
                                        TextColor="White"
                                        CornerRadius="10"
                                        HeightRequest="35"
                                        FontSize="12"/>
                            </Grid>

                            <!-- Estatísticas -->
                            <Grid ColumnDefinitions="*,*" Margin="0,10,0,0">
                                <StackLayout Grid.Column="0" Spacing="2">
                                    <Label Text="8"
                                           TextColor="orange"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"/>
                                    <Label Text="Pedidos"
                                           TextColor="#666666"
                                           FontSize="12"
                                           HorizontalOptions="Center"/>
                                </StackLayout>

                                <StackLayout Grid.Column="1" Spacing="2">
                                    <Label Text="R$ 360"
                                           TextColor="orange"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"/>
                                    <Label Text="Este mês"
                                           TextColor="#666666"
                                           FontSize="12"
                                           HorizontalOptions="Center"/>
                                </StackLayout>
                            </Grid>
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!-- Seção Serviços Pausados -->
                <StackLayout Spacing="15">
                    <Label Text="Serviços Pausados"
                           TextColor="#666666"
                           FontAttributes="Bold"
                           FontSize="18"/>

                    <!-- Card Serviço Pausado -->
                    <Frame BackgroundColor="#F0F0F0"
                           CornerRadius="15"
                           Padding="20"
                           HasShadow="False"
                           BorderColor="#CCCCCC"
                           Opacity="0.7">
                        <StackLayout Spacing="10">

                            <!-- Header do Card -->
                            <Grid ColumnDefinitions="*,Auto">
                                <StackLayout Grid.Column="0" Spacing="5">
                                    <Label Text="Jardinagem"
                                           TextColor="#666666"
                                           FontAttributes="Bold"
                                           FontSize="16"/>
                                    <Label Text="Manutenção de jardins"
                                           TextColor="#999999"
                                           FontSize="14"/>
                                </StackLayout>

                                <Label Grid.Column="1"
                                       Text="PAUSADO"
                                       TextColor="orange"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </Grid>

                            <!-- Botão Reativar -->
                            <Button Text="Reativar Serviço"
                                    BackgroundColor="#4CAF50"
                                    TextColor="White"
                                    CornerRadius="10"
                                    HeightRequest="40"
                                    Margin="0,10,0,0"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!-- Espaço extra no final -->
                <BoxView HeightRequest="20" BackgroundColor="Transparent"/>

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>