<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rently.Dashboard"
             BackgroundColor="white"
             >
    
    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto">



        <!-- BARRA DE BUSCA -->
        <SearchBar Grid.Row="2"
                   Placeholder="O que você precisa hoje?"
                   Margin="15,15,15,15"
                   BackgroundColor="#F5F5F5"
                   TextColor="#333333"
                   PlaceholderColor="#999999"
                   CancelButtonColor="Orange"
                   HeightRequest="45"/>

        <!-- CONTEÚDO PRINCIPAL -->
        <ScrollView Grid.Row="3">
            <StackLayout Padding="20" Spacing="20">

                <!-- CATEGORIAS -->
                <StackLayout Spacing="15">
                    <Label Text="Categorias de Serviços"
                           TextColor="Orange"
                           FontAttributes="Bold"
                           FontSize="18"/>

                    <Grid ColumnDefinitions="*,*,*,*" 
                          ColumnSpacing="8" 
                          RowSpacing="8">

                        <Frame Grid.Column="0" 
                               Padding="6,8" 
                               BorderColor="Orange" 
                               CornerRadius="8" 
                               BackgroundColor="Transparent"
                               HasShadow="True"
                               HeightRequest="35">
                            <Label Text="Limpeza" 
                                   TextColor="#333333" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontSize="10"
                                   FontAttributes="Bold"/>
                        </Frame>

                        <Frame Grid.Column="1" 
                               Padding="6,8" 
                               BorderColor="Orange" 
                               CornerRadius="8" 
                               BackgroundColor="Transparent"
                               HasShadow="True"
                               HeightRequest="35">
                            <Label Text="Manutenção" 
                                   TextColor="#333333" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontSize="10"
                                   FontAttributes="Bold"/>
                        </Frame>

                        <Frame Grid.Column="2" 
                               Padding="6,8" 
                               BorderColor="Orange" 
                               CornerRadius="8" 
                               BackgroundColor="Transparent"
                               HasShadow="True"
                               HeightRequest="35">
                            <Label Text="Frete" 
                                   TextColor="#333333" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontSize="10"
                                   FontAttributes="Bold"/>
                        </Frame>

                        <Frame Grid.Column="3" 
                               Padding="6,8" 
                               BorderColor="Orange" 
                               CornerRadius="8" 
                               BackgroundColor="Transparent"
                               HasShadow="True"
                               HeightRequest="35">
                            <Label Text="Eventos" 
                                   TextColor="#333333" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontSize="10"
                                   FontAttributes="Bold"/>
                        </Frame>
                    </Grid>
                </StackLayout>

                <!-- SERVIÇOS DISPONÍVEIS -->
                <StackLayout Spacing="15">
                    <Label Text="Serviços Disponíveis"
                           TextColor="Orange"
                           FontAttributes="Bold"
                           FontSize="18"/>

                    <!-- Card João Silva -->
                    <Frame BackgroundColor="#F5F5F5"
                           CornerRadius="15"
                           Padding="20"
                           HasShadow="True"
                           BorderColor="#E0E0E0">
                        <StackLayout Orientation="Horizontal" Spacing="15">

                            <Frame CornerRadius="30" 
                                   Padding="0" 
                                   BackgroundColor="Transparent"
                                   BorderColor="Orange"
                                   WidthRequest="60" 
                                   HeightRequest="60">
                                <Image Source="user1.png"
                                       WidthRequest="60"
                                       HeightRequest="60"
                                       Aspect="AspectFill"/>
                            </Frame>

                            <StackLayout VerticalOptions="CenterAndExpand" 
                                         HorizontalOptions="StartAndExpand" 
                                         Spacing="5">
                                <Label Text="João Silva"
                                       TextColor="#333333"
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Text="Manutenção"
                                       TextColor="#666666"
                                       FontSize="14"/>
                                <Label Text="R$ 60/hora"
                                       TextColor="Orange"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                            </StackLayout>

                            <Button Text="Alugar"
                                    BackgroundColor="Orange"
                                    TextColor="White"
                                    CornerRadius="20"
                                    WidthRequest="80"
                                    HeightRequest="40"
                                    FontAttributes="Bold"
                            Clicked="VerDetalhes"/>
                        </StackLayout>
                    </Frame>

                    <!-- Card Maria Santos -->
                    <Frame BackgroundColor="#F5F5F5"
                           CornerRadius="15"
                           Padding="20"
                           HasShadow="True"
                           BorderColor="#E0E0E0">
                        <StackLayout Orientation="Horizontal" Spacing="15">

                            <Frame CornerRadius="30" 
                                   Padding="0" 
                                   BackgroundColor="Transparent"
                                   BorderColor="Orange"
                                   WidthRequest="60" 
                                   HeightRequest="60">
                                <Image Source="user1.png"
                                       WidthRequest="60"
                                       HeightRequest="60"
                                       Aspect="AspectFill"/>
                            </Frame>

                            <StackLayout VerticalOptions="CenterAndExpand" 
                                         HorizontalOptions="StartAndExpand" 
                                         Spacing="5">
                                <Label Text="Maria Santos"
                                       TextColor="#333333"
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Text="Limpeza"
                                       TextColor="#666666"
                                       FontSize="14"/>
                                <Label Text="R$ 45/hora"
                                       TextColor="Orange"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                            </StackLayout>

                            <Button Text="Alugar"
                                    BackgroundColor="Orange"
                                    TextColor="White"
                                    CornerRadius="20"
                                    WidthRequest="80"
                                    HeightRequest="40"
                                    FontAttributes="Bold"
                            Clicked="VerDetalhes"/>
                        </StackLayout>
                    </Frame>

                    <!-- Card Carlos Lima -->
                    <Frame BackgroundColor="#F5F5F5"
                           CornerRadius="15"
                           Padding="20"
                           HasShadow="True"
                           BorderColor="#E0E0E0">
                        <StackLayout Orientation="Horizontal" Spacing="15">

                            <Frame CornerRadius="30" 
                                   Padding="0" 
                                   BackgroundColor="Transparent"
                                   BorderColor="Orange"
                                   WidthRequest="60" 
                                   HeightRequest="60">
                                <Image Source="user1.png"
                                       WidthRequest="60"
                                       HeightRequest="60"
                                       Aspect="AspectFill"/>
                            </Frame>

                            <StackLayout VerticalOptions="CenterAndExpand" 
                                         HorizontalOptions="StartAndExpand" 
                                         Spacing="5">
                                <Label Text="Carlos Lima"
                                       TextColor="#333333"
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Text="Frete"
                                       TextColor="#666666"
                                       FontSize="14"/>
                                <Label Text="R$ 80/viagem"
                                       TextColor="Orange"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                            </StackLayout>

                            <Button Text="Alugar"
                                    BackgroundColor="Orange"
                                    TextColor="White"
                                    CornerRadius="20"
                                    WidthRequest="80"
                                    HeightRequest="40"
                                    FontAttributes="Bold"
                            Clicked="VerDetalhes"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!-- Espaço extra no final -->
                <BoxView HeightRequest="20" BackgroundColor="Transparent"/>

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>