<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rently.Dashboard"
             BackgroundColor="white">

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto">

        <!-- MENU LATERAL -->
        <Frame x:Name="MenuLateral"
               Grid.RowSpan="5"
               BackgroundColor="White"
               WidthRequest="280"
               HorizontalOptions="Start"
               VerticalOptions="FillAndExpand"
               HasShadow="True"
               CornerRadius="0"
               BorderColor="#E0E0E0"
               Padding="0"
               IsVisible="False"
               ZIndex="10"
               TranslationX="-280">

            <StackLayout Spacing="0">
                <!-- Header do Menu -->
                <StackLayout BackgroundColor="#FF7A00" 
                           Padding="20,15,20,15" 
                           Spacing="10">
                    <Label Text="Menu Principal"
                           TextColor="White"
                           FontSize="20"
                           FontAttributes="Bold"/>
                   
                </StackLayout>

                <!-- Itens do Menu -->
                <StackLayout Padding="0" Spacing="0">
                    <Button x:Name="MenuInicio"
                            Text="Início"
                            BackgroundColor="Transparent"
                            TextColor="#333333"
                            HorizontalOptions="FillAndExpand"
                            HeightRequest="60"
                            FontSize="16"/>

                    <BoxView HeightRequest="1" BackgroundColor="#E0E0E0"/>

                    <Button x:Name="MenuServicos"
                            Text="Meus Serviços"
                            BackgroundColor="Transparent"
                            TextColor="#333333"
                            HorizontalOptions="FillAndExpand"
                            HeightRequest="60"
                            FontSize="16"/>

                    <BoxView HeightRequest="1" BackgroundColor="#E0E0E0"/>

                    <Button x:Name="MenuPedidos"
                            Text="Alugueis"
                            BackgroundColor="Transparent"
                            TextColor="#333333"
                            HorizontalOptions="FillAndExpand"
                            HeightRequest="60"
                            FontSize="16"/>

                    <BoxView HeightRequest="1" BackgroundColor="#E0E0E0"/>

                    <Button x:Name="MenuPerfil"
                            Text="Perfil"
                            BackgroundColor="Transparent"
                            TextColor="#333333"
                            HorizontalOptions="FillAndExpand"
                            HeightRequest="60"
                            FontSize="16"/>

                    <BoxView HeightRequest="1" BackgroundColor="#E0E0E0"/>

                    <Button x:Name="MenuSair"
                            Text="Sair"
                            BackgroundColor="Transparent"
                            TextColor="#FF4444"
                            HorizontalOptions="FillAndExpand"
                            HeightRequest="60"
                            FontSize="16"/>
                </StackLayout>
            </StackLayout>
        </Frame>

        <!-- OVERLAY PARA FECHAR MENU -->
        <BoxView x:Name="MenuOverlay"
                 Grid.RowSpan="5"
                 BackgroundColor="Black"
                 Opacity="0"
                 IsVisible="False"
                 ZIndex="5">
        </BoxView>

        <!-- MENU HEADER -->
        <Grid Grid.Row="0" 
              BackgroundColor="#FF7A00" 
              Padding="5,5,5,5"
              ColumnDefinitions="Auto,*,Auto,Auto,Auto"
              ZIndex="1">

            <!-- Menu Button -->
            <Button x:Name="BotaoMenu"
                    Grid.Column="0"
                    Text="☰"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="20"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"/>

            <!-- Logo/App Name -->
            <Label Grid.Column="1"
                   Text="Aluguel de Serviços"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="20"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- BARRA DE BUSCA -->
        <SearchBar Grid.Row="2"
                   Placeholder="O que você precisa hoje?"
                   Margin="15,15,15,15"
                   BackgroundColor="#F5F5F5"
                   TextColor="#333333"
                   PlaceholderColor="#999999"
                   CancelButtonColor="#FF7A00"
                   HeightRequest="45"/>

        <!-- CONTEÚDO PRINCIPAL -->
        <ScrollView Grid.Row="3">
            <StackLayout Padding="20" Spacing="20">

                <!-- CATEGORIAS -->
                <StackLayout Spacing="15">
                    <Label Text="Categorias de Serviços"
                           TextColor="#FF7A00"
                           FontAttributes="Bold"
                           FontSize="18"/>

                    <Grid ColumnDefinitions="*,*,*,*" 
                          ColumnSpacing="8" 
                          RowSpacing="8">

                        <Frame Grid.Column="0" 
                               Padding="6,8" 
                               BorderColor="#FF7A00" 
                               CornerRadius="8" 
                               BackgroundColor="Transparent"
                               HasShadow="True"
                               HeightRequest="35">
                            <Label Text="Limpeza" 
                                   TextColor="#333333" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontSize="10"
                                   FontAttributes="Bold"/>
                        </Frame>

                        <Frame Grid.Column="1" 
                               Padding="6,8" 
                               BorderColor="#FF7A00" 
                               CornerRadius="8" 
                               BackgroundColor="Transparent"
                               HasShadow="True"
                               HeightRequest="35">
                            <Label Text="Manutenção" 
                                   TextColor="#333333" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontSize="10"
                                   FontAttributes="Bold"/>
                        </Frame>

                        <Frame Grid.Column="2" 
                               Padding="6,8" 
                               BorderColor="#FF7A00" 
                               CornerRadius="8" 
                               BackgroundColor="Transparent"
                               HasShadow="True"
                               HeightRequest="35">
                            <Label Text="Frete" 
                                   TextColor="#333333" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontSize="10"
                                   FontAttributes="Bold"/>
                        </Frame>

                        <Frame Grid.Column="3" 
                               Padding="6,8" 
                               BorderColor="#FF7A00" 
                               CornerRadius="8" 
                               BackgroundColor="Transparent"
                               HasShadow="True"
                               HeightRequest="35">
                            <Label Text="Eventos" 
                                   TextColor="#333333" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontSize="10"
                                   FontAttributes="Bold"/>
                        </Frame>
                    </Grid>
                </StackLayout>

                <!-- SERVIÇOS DISPONÍVEIS -->
                <StackLayout Spacing="15">
                    <Label Text="Serviços Disponíveis"
                           TextColor="#FF7A00"
                           FontAttributes="Bold"
                           FontSize="18"/>

                    <!-- Card João Silva -->
                    <Frame BackgroundColor="#F5F5F5"
                           CornerRadius="15"
                           Padding="20"
                           HasShadow="True"
                           BorderColor="#E0E0E0">
                        <StackLayout Orientation="Horizontal" Spacing="15">

                            <Frame CornerRadius="30" 
                                   Padding="0" 
                                   BackgroundColor="Transparent"
                                   BorderColor="#FF7A00"
                                   WidthRequest="60" 
                                   HeightRequest="60">
                                <Image Source="user1.png"
                                       WidthRequest="60"
                                       HeightRequest="60"
                                       Aspect="AspectFill"/>
                            </Frame>

                            <StackLayout VerticalOptions="CenterAndExpand" 
                                         HorizontalOptions="StartAndExpand" 
                                         Spacing="5">
                                <Label Text="João Silva"
                                       TextColor="#333333"
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Text="Manutenção"
                                       TextColor="#666666"
                                       FontSize="14"/>
                                <Label Text="R$ 60/hora"
                                       TextColor="#FF7A00"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                            </StackLayout>

                            <Button Text="Alugar"
                                    BackgroundColor="#FF7A00"
                                    TextColor="White"
                                    CornerRadius="20"
                                    WidthRequest="80"
                                    HeightRequest="40"
                                    FontAttributes="Bold"/>
                        </StackLayout>
                    </Frame>

                    <!-- Card Maria Santos -->
                    <Frame BackgroundColor="#F5F5F5"
                           CornerRadius="15"
                           Padding="20"
                           HasShadow="True"
                           BorderColor="#E0E0E0">
                        <StackLayout Orientation="Horizontal" Spacing="15">

                            <Frame CornerRadius="30" 
                                   Padding="0" 
                                   BackgroundColor="Transparent"
                                   BorderColor="#FF7A00"
                                   WidthRequest="60" 
                                   HeightRequest="60">
                                <Image Source="user1.png"
                                       WidthRequest="60"
                                       HeightRequest="60"
                                       Aspect="AspectFill"/>
                            </Frame>

                            <StackLayout VerticalOptions="CenterAndExpand" 
                                         HorizontalOptions="StartAndExpand" 
                                         Spacing="5">
                                <Label Text="Maria Santos"
                                       TextColor="#333333"
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Text="Limpeza"
                                       TextColor="#666666"
                                       FontSize="14"/>
                                <Label Text="R$ 45/hora"
                                       TextColor="#FF7A00"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                            </StackLayout>

                            <Button Text="Alugar"
                                    BackgroundColor="#FF7A00"
                                    TextColor="White"
                                    CornerRadius="20"
                                    WidthRequest="80"
                                    HeightRequest="40"
                                    FontAttributes="Bold"/>
                        </StackLayout>
                    </Frame>

                    <!-- Card Carlos Lima -->
                    <Frame BackgroundColor="#F5F5F5"
                           CornerRadius="15"
                           Padding="20"
                           HasShadow="True"
                           BorderColor="#E0E0E0">
                        <StackLayout Orientation="Horizontal" Spacing="15">

                            <Frame CornerRadius="30" 
                                   Padding="0" 
                                   BackgroundColor="Transparent"
                                   BorderColor="#FF7A00"
                                   WidthRequest="60" 
                                   HeightRequest="60">
                                <Image Source="user1.png"
                                       WidthRequest="60"
                                       HeightRequest="60"
                                       Aspect="AspectFill"/>
                            </Frame>

                            <StackLayout VerticalOptions="CenterAndExpand" 
                                         HorizontalOptions="StartAndExpand" 
                                         Spacing="5">
                                <Label Text="Carlos Lima"
                                       TextColor="#333333"
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Text="Frete"
                                       TextColor="#666666"
                                       FontSize="14"/>
                                <Label Text="R$ 80/viagem"
                                       TextColor="#FF7A00"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                            </StackLayout>

                            <Button Text="Alugar"
                                    BackgroundColor="#FF7A00"
                                    TextColor="White"
                                    CornerRadius="20"
                                    WidthRequest="80"
                                    HeightRequest="40"
                                    FontAttributes="Bold"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!-- Espaço extra no final -->
                <BoxView HeightRequest="20" BackgroundColor="Transparent"/>

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>